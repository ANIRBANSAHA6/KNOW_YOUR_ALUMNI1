<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/img_4110"
    tools:context=".VerifyActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/paper_plane_8010039__1_"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Credentials"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/we_will_send"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="mobile number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circular_rectangle"
        android:layout_marginTop="25dp"
        android:inputType="phone"
        android:paddingLeft="25dp"/>

    <Button
        android:id="@+id/Send_otp_btn"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:text="SEND OTP"
        android:textStyle="bold"
        android:backgroundTint="#128CF6"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="enter otp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/circular_rectangle"
        android:layout_marginTop="25dp"
        android:inputType="phone"
        android:paddingLeft="25dp"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:text="VERIFY"
        android:textStyle="bold"
        android:backgroundTint="#128CF6"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Didn't Receive a code ?"
        android:textSize="15dp"
        android:textStyle="normal"
        android:gravity="center"/>

    <TextView
        android:id="@+id/resend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#128cf6"
        android:textStyle="bold"/>


</LinearLayout>