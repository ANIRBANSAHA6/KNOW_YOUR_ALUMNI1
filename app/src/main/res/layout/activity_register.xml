<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_4110"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        android:src="@drawable/final_2"
        android:layout_marginTop="55dp"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:background="@drawable/circular_rectangle"
        android:id="@+id/college_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="45px"
        android:layout_marginTop="50px"
        android:hint="College ID"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:textColor="#000"
        />

    <EditText
        android:background="@drawable/circular_rectangle"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="45px"
        android:layout_marginTop="50px"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:inputType="numberPassword"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/confirm_password"
        android:background="@drawable/circular_rectangle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="45px"
        android:layout_marginTop="50px"
        android:hint="Confirm Password"
        android:paddingLeft="20dp"
        android:inputType="numberPassword"
        android:textColor="#000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Choose your role"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/spinner_rectangle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:minHeight="48dp" />

    </LinearLayout>


    <Button
        android:id="@+id/register_btn"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#128CF6"
        android:text="REGISTER"
        android:textStyle="bold"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ?"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/Signintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#128CF6"
            android:paddingLeft="5dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>